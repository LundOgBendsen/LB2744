<?xml version="1.0" encoding="UTF-8"?>
<schema
        targetNamespace="http://lundogbendsen.dk/schemas/2021/08/02/Account"
        xmlns="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" >
    <element name="konto">
        <complexType>
            <sequence>
                <element name="kontonummer" >
                    <simpleType>
                        <restriction base="string">
                            <minLength value="10"/>
                            <maxLength value="10"/>
                        </restriction>
                    </simpleType>
                </element>
                <element name="registreringsnummer" >
                    <simpleType>
                        <restriction base="string">
                            <minLength value="4"/>
                            <maxLength value="4"/>
                        </restriction>
                    </simpleType>
                </element>
                <element name="saldo" >
                    <simpleType>
                        <restriction base="decimal">
                            <minInclusive value="0.0"/>
                            <maxInclusive value="99000000.00"/>
                        </restriction>
                    </simpleType>

                </element>
                <element name="oprettetDato" type="date"/>
                <element name="type" >
                    <simpleType>
                        <restriction base="string">
                            <enumeration value="LÃ¸nkonto"/>
                            <enumeration value="Opsparingskonto"/>
                        </restriction>
                    </simpleType>
                </element>
                <element name="amlSuspekt">
                    <!--we restrict to true/false to prevent the use of 1/0-->
                    <simpleType>
                        <restriction base="boolean">
                            <enumeration value="true"/>
                            <enumeration value="false"/>
                        </restriction>
                    </simpleType>
                </element>
            </sequence>
        </complexType>
    </element>
</schema>
